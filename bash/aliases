# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# ls
alias ls='ls -FG'
alias ll='ls -lG'
alias l='ls -lAhG'
function lt() { ls -ltrsa "$@" | tail; }

# grep
alias grep='grep --color=auto'
function psgrep() { ps axuf | grep -v grep | grep "$@" -i --color=auto; }

# misc
alias reload='. ~/.bash_profile'
alias vi='vim'
function fname() { find . -iname "*$@*"; }
